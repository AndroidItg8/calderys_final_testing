<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".caldConnect.gallery.GalleryDetailsActivity"
    tools:showIn="@layout/activity_gallery_details">

    <RelativeLayout
        android:id="@+id/rl_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <TextView
            android:id="@+id/lbl_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:fontFamily="@font/open_sans"
            android:background="@color/half_transparent"
            android:padding="@dimen/margin_8"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_pager_item"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:minHeight="400dp"
            android:scaleType="fitCenter"
            android:layout_below="@+id/lbl_place_name"
            android:visibility="visible"

            tools:src="@drawable/calderys" />


        <TextView
            android:id="@+id/txt_description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_pager_item"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/cust_txt"
            android:padding="@dimen/margin_8"
            android:text="@string/describtion"
            android:textColor="@color/colorWhite"

            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/frm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/txt_description_edit"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/cust_txt">

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_outline"
                android:padding="@dimen/margin_8"
                android:visibility="visible"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_delete_black_white_24dp" />

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite" />

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"

                    app:srcCompat="@drawable/ic_mode_edit_white_24dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:visibility="gone" />
        </FrameLayout>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>