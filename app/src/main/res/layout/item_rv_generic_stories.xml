<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginEnd="@dimen/margin_8"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_8">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_8"
            android:fontFamily="@font/open_sans"
            android:text="Date"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_14"
            android:textStyle="normal" />


            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_mode_edit_24dp"
                    android:layout_alignParentRight="true" />


                <ImageView
                    android:id="@+id/img_enable"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_toStartOf="@+id/img_delete"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_disable_black_24dp"
                    android:layout_marginRight="@dimen/margin_16"
                    android:layout_toLeftOf="@+id/img_delete" />
                <ProgressBar
                    android:id="@+id/progressEnable"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_toStartOf="@+id/img_delete"


                    android:layout_marginEnd="@dimen/margin_16"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/img_delete"
                    android:layout_marginRight="@dimen/margin_16" />


                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_toStartOf="@+id/img_edit"
                    app:srcCompat="@drawable/ic_delete_black_24dp"
                    android:layout_marginRight="@dimen/margin_16"
                    android:layout_toLeftOf="@+id/img_edit" />
                <ProgressBar
                    android:id="@+id/progressDelete"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_toStartOf="@+id/img_edit"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/img_edit"
                    android:layout_marginRight="@dimen/margin_16" />

            </RelativeLayout>






        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rl"
            android:layout_margin="@dimen/margin_8"
            android:background="@color/colorGrayLight" />


        <TextView
            android:id="@+id/lbl_dealer_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:fontFamily="@font/open_sans"
            android:text="Description:"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_10sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_dealerCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_toEndOf="@+id/lbl_dealer_code"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:maxLines="1"
            android:text="Description"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_dealer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_dealerCode"
            android:layout_marginTop="@dimen/margin_4"
            android:fontFamily="@font/open_sans"
            android:text="Active:"
            android:textColor="@color/colorGray"

            android:textSize="@dimen/_10sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_dealerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_dealerCode"
            android:layout_alignBaseline="@+id/lbl_dealer_name"
            android:layout_alignStart="@+id/txt_dealerCode"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_toEndOf="@+id/lbl_dealer_name"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:lines="1"

            android:maxLines="1"
            android:text="12345678890887676"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_14"
            android:textStyle="bold" />


    </RelativeLayout>


</android.support.v7.widget.CardView>