<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".caldNet.newIndent.intent.fragment.IntentDispatchedDetailFragment">

    <RadioGroup
        android:id="@+id/rdCalderysGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:orientation="horizontal"
        android:weightSum="2">

        <RadioButton
            android:id="@+id/rd_indent_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_selectors"
            android:button="@null"
            android:checked="true"
            android:layout_gravity="center"
            android:gravity="center"

            android:padding="@dimen/margin_16"
            android:text="Indent View"
            android:textColor="@drawable/txt_selector" />

        <RadioButton
            android:id="@+id/rd_dispacthed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_selectors"
            android:button="@null"
            android:checked="false"
            android:gravity="center"

            android:layout_gravity="center"
            android:padding="@dimen/margin_16"
            android:text="Dispatched Details"
            android:textColor="@drawable/txt_selector" />


    </RadioGroup>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rdCalderysGroup"
        android:layout_margin="@dimen/margin_8"
        android:id="@+id/frame_dispached"
        android:layout_height="match_parent"/>
</RelativeLayout>