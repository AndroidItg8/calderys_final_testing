                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lbl_igst"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text=" IGST"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_igst"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/txt_so_number"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/margin_8"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lbl_sgst"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"

                        android:padding="@dimen/margin_8"
                        android:text="SGST +CGST"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_sgst"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text=" "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lbl_consignee_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text="Transport Name"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"

                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_consignee_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </TableRow>


                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_Delivery_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text="Delivery Date"
                        android:textColor="@color/colorGray"

                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/txt_delivery_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"

                        android:textStyle="normal"
                        android:visibility="visible" />

                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_add_tax_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text="Tax Info"

                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/txt_add_tax_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </TableRow>

            </TableLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_indents"

            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8">

            <TextView
                android:id="@+id/lbl_product_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/txt_10"
                android:text="Product Details"
                android:textColor="@color/colorWhite" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lbl_product_details"
                android:layout_marginTop="@dimen/margin_4"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_approved_reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_material"
            android:layout_marginTop="@dimen/margin_8"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_8">

            <TextView
                android:id="@+id/lbl_so_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/txt_10"
                android:text="S.O Details"
                android:textColor="@color/colorWhite" />

            <View
                android:id="@+id/struts"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/lbl_so_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_so_details"
                android:layout_alignEnd="@+id/struts"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimarys"
                android:padding="4dp"
                android:text="SO Type"
                android:textColor="@color/colorWhite"
                android:layout_alignRight="@+id/struts"
                android:layout_alignParentLeft="true" />

            <Spinner
                android:id="@+id/so_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/lbl_so_type"
                android:layout_alignEnd="@+id/struts"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/bg_cus_spinner"
                android:inputType="number"
                android:padding="4dp"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/struts" />


            <TextView
                android:id="@+id/lbl_sales_office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_so_details"
                android:layout_alignStart="@+id/struts"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimarys"
                android:padding="4dp"
                android:text="Sales Office"
                android:textColor="@color/colorWhite"
                android:layout_alignLeft="@+id/struts"
                android:layout_alignParentRight="true" />

            <Spinner

                android:id="@+id/sales_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/lbl_sales_office"
                android:layout_alignStart="@+id/struts"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_cus_spinner"
