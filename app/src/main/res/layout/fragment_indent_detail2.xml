                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text=" "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/lbl_indent_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text="Indent Date "
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_indent_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text="11-12-2018"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />
                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lbl_po_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text="Po Number"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_po_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/lbl_po_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text="Po Date"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_po_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
