                android:padding="@dimen/txt_10"
                android:text="Indent  Details"
                android:textColor="@color/colorWhite" />

            <TableLayout
                android:id="@+id/simpleTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_intents_details"
                android:background="@drawable/cust_txt"
                android:stretchColumns="1">

                <TableRow

                    android:id="@+id/tbl_row_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- first element of the row-->
                    <TextView
                        android:id="@+id/lbl_indent_code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text="Indent Code"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_indent_code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:padding="@dimen/margin_8"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />
                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- first element of the row-->
                    <TextView
                        android:id="@+id/lbl_indent_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text="Indent Status"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_indent_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:text=" "
                        android:padding="@dimen/margin_8"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />
                </TableRow>


                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lbl_dealer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cust_txt"
                        android:fontFamily="@font/open_sans"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/margin_8"
                        android:text="Consignee Name"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
