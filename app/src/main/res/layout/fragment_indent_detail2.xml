                android:textColor="@color/colorWhite"
                android:layout_alignRight="@+id/struts"
                android:layout_alignParentLeft="true" />

            <Spinner
                android:id="@+id/usaga_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/lbl_usage_indicator"
                android:layout_alignEnd="@+id/struts"
                android:layout_alignParentStart="true"
                android:background="@drawable/bg_cus_spinner"
                android:inputType="number"
                android:padding="4dp"
                android:layout_alignRight="@+id/struts"
                android:layout_alignParentLeft="true" />


            <TextView
                android:id="@+id/lbl_process_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_destribution_channel"
                android:layout_alignStart="@+id/struts"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimarys"
                android:padding="4dp"
                android:text="Process Code "
                android:textColor="@color/colorWhite"
                android:layout_alignLeft="@+id/struts"
                android:layout_alignParentRight="true" />

            <Spinner

                android:id="@+id/process_code_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/lbl_process_code"
                android:layout_alignStart="@+id/struts"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_cus_spinner"
                android:padding="4dp"
                android:layout_alignLeft="@+id/struts"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/lbl_devision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/process_code_spinner"
                android:layout_alignEnd="@+id/struts"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/margin_4"
                android:background="@color/colorPrimarys"
                android:padding="4dp"
