                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/edt_destribution_channel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/lbl_distribution_channel"
                android:background="@drawable/bg_react_header"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="text"
                android:padding="4dp" />

            <TextView
                android:id="@+id/lbl_usage_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_destribution_channel"
                android:layout_alignEnd="@+id/struts"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimarys"
                android:padding="4dp"
