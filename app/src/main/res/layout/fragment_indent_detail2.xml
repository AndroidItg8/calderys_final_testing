                android:focusableInTouchMode="false"
                android:inputType="text"
                android:padding="4dp"
                android:layout_alignRight="@+id/struts"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/lbl_sales_organization"
