                android:textColor="@color/colorWhite"
                android:layout_alignRight="@+id/struts"
                android:layout_alignParentLeft="true" />

            <Spinner
                android:id="@+id/spl_process_indicator_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/lbl_spl_process_indicator"
                android:layout_alignEnd="@+id/struts"
                android:layout_alignParentStart="true"
                android:background="@drawable/bg_cus_spinner"
                android:inputType="number"
                android:padding="4dp"
                android:layout_alignRight="@+id/struts"
                android:layout_alignParentLeft="true" />


            <TextView
                android:id="@+id/lbl_partner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spl_process_indicator_spinner"
                android:layout_marginTop="@dimen/margin_4"
                android:background="@color/colorPrimarys"
                android:padding="4dp"
                android:text="Partner"
                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/edt_partner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/lbl_partner"
                android:background="@drawable/bg_react_header"
                android:inputType="text"
                android:padding="4dp" />


            <TextView
                android:id="@+id/lbl_sales_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_partner"
                android:layout_alignEnd="@+id/struts"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/margin_4"
                android:background="@color/colorPrimarys"
                android:padding="4dp"
                android:text="Sales Group"
                android:textColor="@color/colorWhite"
                android:layout_alignRight="@+id/struts"
                android:layout_alignParentLeft="true" />

            <Spinner
                android:id="@+id/sales_group_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/lbl_sales_grp"
                android:layout_alignEnd="@+id/struts"
                android:layout_alignParentStart="true"
                android:background="@drawable/bg_cus_spinner"
                android:inputType="number"
                android:padding="4dp"
                android:layout_alignRight="@+id/struts"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/lbl_sales_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_partner"
                android:layout_alignStart="@+id/struts"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimarys"
                android:padding="4dp"
                android:text="Sales Package"
                android:textColor="@color/colorWhite"
                android:layout_alignLeft="@+id/struts"
                android:layout_alignParentRight="true" />

            <Spinner

                android:id="@+id/sales_package_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/lbl_sales_package"
                android:layout_alignStart="@+id/struts"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_cus_spinner"
                android:padding="4dp"
                android:layout_alignLeft="@+id/struts"
                android:layout_alignParentRight="true" />


            <TextView
                android:id="@+id/lbl_approve_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sales_package_spinner"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/colorPrimary"
                android:padding="@dimen/txt_10"
                android:text="Approve/Reject"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/lbl_comment_for_approved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_approve_reject"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/colorPrimarys"
                android:padding="4dp"
                android:text="Comments fro Approved/Reject"
                android:textColor="@color/colorWhite" />


            <EditText
                android:id="@+id/edt_approved_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_comment_for_approved"
                android:background="@drawable/bg_react_header"
                android:ellipsize="end"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="2"
                android:padding="10dp"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/btnApprove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_approved_reject"
                android:layout_alignEnd="@+id/struts"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                android:background="@color/colorGreen"
                android:text="APPROVE"
                android:textColor="@color/colorWhite"
                android:layout_alignRight="@+id/struts"
                android:layout_alignParentLeft="true" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/edt_approved_reject"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:visibility="gone"

                />

            <Button
                android:id="@+id/btnReject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_approved_reject"
                android:layout_alignStart="@+id/struts"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@color/PrimaryColorDark2"
                android:text="REJECT"
                android:textColor="@color/colorWhite"
                android:layout_alignLeft="@+id/struts"
                android:layout_alignParentRight="true" />
        </RelativeLayout>


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>