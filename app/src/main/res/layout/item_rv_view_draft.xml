<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_4"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8">


        <TextView
            android:id="@+id/txt_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_toEndOf="@+id/lbl_titles"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:maxLines="1"
            android:text="1000000070-1308-0001"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_toRightOf="@+id/lbl_titles" />

        <TextView
            android:id="@+id/lbl_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_alignBaseline="@+id/txt_titles"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_8"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:maxLines="1"
            android:text="Indent Code :"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible"
            android:layout_marginRight="@dimen/margin_8" />

        <TextView
            android:id="@+id/lbl_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_titles"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_8"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:maxLines="1"
            android:text="Status :"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_12sdp"

            android:textStyle="normal"
            android:visibility="visible"
            android:layout_marginRight="@dimen/margin_8" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_titles"
            android:layout_alignBaseline="@+id/lbl_status"
            android:layout_alignStart="@+id/txt_titles"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_toEndOf="@+id/lbl_status"
            android:drawablePadding="@dimen/margin_8"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:maxLines="1"
            android:padding="@dimen/margin_4"
            android:text="Save"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible"
            android:layout_alignLeft="@+id/txt_titles"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_toRightOf="@+id/lbl_status" />

        <LinearLayout
            android:layout_below="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/ll_details"
            android:visibility="visible"
            android:layout_marginTop="@dimen/margin_8"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4"
                android:text="Edit Indent "
                android:background="@drawable/cust_txt"
                android:gravity="center"
                android:textColor="@color/colorGreen"
                android:id="@+id/txt_edit"
                android:layout_marginEnd="@dimen/margin_4"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_4" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/frm">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_4"
                    android:text="Cancel Indent"
                    android:background="@drawable/cust_txt"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:layout_marginStart="@dimen/margin_4"
                    android:id="@+id/txt_cancel"
                    android:layout_marginLeft="@dimen/margin_4" />
                <ProgressBar
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:id="@+id/progress_delete"/>

            </FrameLayout>





        </LinearLayout>


        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_4"
            android:gravity="center_vertical"
            android:text="12-05-2018"
            android:textAllCaps="false"
            android:textColor="@color/colorLogin"
            android:textSize="@dimen/_10sdp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/txt_date"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@color/colorGrayLight" />


        <!--android:drawableLeft="@drawable/ic_drafts_black_24dp"-->


    </RelativeLayout>

</android.support.v7.widget.CardView>