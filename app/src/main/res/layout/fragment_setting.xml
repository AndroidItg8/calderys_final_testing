<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <RadioGroup
        android:id="@+id/rdCalderysGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <RadioButton
            android:id="@+id/rd_success_stories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_selectors"
            android:button="@null"
            android:checked="true"
            android:padding="@dimen/margin_16"
            android:text="Success Stroies"
            android:textColor="@drawable/txt_selector" />

        <RadioButton
            android:id="@+id/rd_important_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_selectors"
            android:button="@null"
            android:checked="false"
            android:padding="@dimen/margin_16"
            android:text="Important Message"
            android:textColor="@drawable/txt_selector" />


    </RadioGroup>

    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Important Message"
        android:textSize="@dimen/txt_14"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/rdCalderysGroup"
        android:layout_margin="@dimen/margin_16"
        android:padding="@dimen/margin_8"
        android:background="@drawable/btn_login"
        android:id="@+id/lbl_create"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lbl_create">

    <android.support.v7.widget.RecyclerView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_16"
    android:id="@+id/recyclerView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".caldNet.newIndent.setting.SettingFragment">


</android.support.v7.widget.RecyclerView>


        <ProgressBar
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:id="@+id/progress"/>
    </FrameLayout>
</RelativeLayout>