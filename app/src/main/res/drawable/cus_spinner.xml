<layer-list xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="1px"
                android:color="@color/colorGrayLight" />

            <padding
                android:bottom="10dp"
                android:left="2dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_arrow_drop_down_black_24dp"

        android:gravity="end|center_vertical"
    />
</layer-list>
