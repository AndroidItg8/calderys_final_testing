<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                                
                                                                                                 
           

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:tag="layout/item_rv_product_0"     
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_8">


            <TextView
                android:id="@+id/lbl_dealer_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="Product Name:"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_dealerCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_toEndOf="@+id/lbl_dealer_code"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:lines="1"
                android:maxLines="1"
                android:tag="binding_1"                          
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_dealer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_dealerCode"
                android:layout_marginTop="@dimen/margin_4"
                android:fontFamily="@font/open_sans"
                android:text="Product  Code :"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_dealerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_dealerCode"
                android:layout_alignBaseline="@+id/lbl_dealer_name"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_toEndOf="@+id/lbl_dealer_name"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:lines="1"
                android:maxLines="1"
                android:tag="binding_2"                          
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_14"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
         