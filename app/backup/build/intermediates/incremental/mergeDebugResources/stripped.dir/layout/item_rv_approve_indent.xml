<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_4"
    app:cardPreventCornerOverlap="true"

    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8">

        <TableLayout
            android:id="@+id/layoutTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:id="@+id/lbl_titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_alignBaseline="@+id/txt_titles"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Indent Code : "
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/txt_titles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_toEndOf="@+id/lbl_titles"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="1000000070-1308-0001"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:visibility="visible" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/lbl_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_alignBaseline="@+id/txt_titles"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Indent Date : "
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_toEndOf="@+id/lbl_titles"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="sds"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:visibility="visible" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/lbl_consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_alignBaseline="@+id/txt_titles"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Consignee Name :"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/txt_Cognee_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_toEndOf="@+id/lbl_titles"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="sds"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/txt_14"
                    android:textStyle="normal"
                    android:visibility="visible" />
            </TableRow>
        </TableLayout>

        <View
            android:id="@+id/viewCenter"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_below="@+id/layoutTable"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/btnAcceptIndent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewCenter"
            android:layout_alignEnd="@+id/viewCenter"
            android:layout_alignParentStart="true"
            android:padding="4dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorGreen"
            android:text="Approve"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_react_header"
            />
        <TextView
            android:id="@+id/btnRejectIndent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewCenter"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/viewCenter"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="4dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:text="REJECT"
            android:visibility="gone"

            android:layout_marginTop="10dp"
            android:background="@drawable/bg_react_header"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>