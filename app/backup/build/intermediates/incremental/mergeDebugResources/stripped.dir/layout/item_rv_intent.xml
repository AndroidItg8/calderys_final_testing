<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"

    app:cardCornerRadius="@dimen/margin_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8">


        <TextView
            android:id="@+id/txt_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:layout_below="@+id/view"
            android:maxLines="1"
            android:text="1000000070-1308-0001"
            android:layout_toEndOf="@+id/lbl_titles"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lbl_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:ellipsize="end"
            android:layout_below="@+id/view"
            android:layout_alignBaseline="@+id/txt_titles"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:maxLines="1"
            android:text="Intent Code:"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible" />
        <TextView
            android:id="@+id/lbl_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:ellipsize="end"
            android:layout_below="@+id/lbl_so_number"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:maxLines="1"
            android:text="Status:"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_alignStart="@+id/txt_titles"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:layout_below="@+id/lbl_so_number"
            android:maxLines="1"
            android:text="SO Generated"
            android:layout_alignBaseline="@+id/lbl_status"
            android:layout_toEndOf="@+id/lbl_status"
            android:textColor="@color/colorBlack"
            android:paddingEnd="@dimen/margin_4"
            android:paddingStart="@dimen/margin_4"
            android:paddingTop="@dimen/margin_2"
            android:paddingBottom="@dimen/margin_2"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible" />
        <TextView
            android:id="@+id/lbl_so_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:ellipsize="end"
            android:layout_below="@+id/lbl_titles"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:maxLines="1"
            android:text="SO Number:"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_dealer_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_alignStart="@+id/txt_titles"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:layout_below="@+id/lbl_status"
            android:maxLines="1"

            android:text="Delear Code"
            android:layout_alignBaseline="@+id/lbl_delear_code"
            android:padding="@dimen/margin_4"
            android:layout_toEndOf="@+id/lbl_delear_code"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible" />
        <TextView
            android:id="@+id/lbl_delear_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:ellipsize="end"
            android:layout_below="@+id/lbl_status"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:maxLines="1"
            android:text="Delear Code:"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_so_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:lines="1"
            android:layout_below="@+id/txt_titles"
            android:layout_alignStart="@+id/txt_titles"
            android:maxLines="1"
            android:text="4410010849"
            android:layout_alignBaseline="@+id/lbl_so_number"
            android:padding="@dimen/margin_4"
            android:layout_toEndOf="@+id/lbl_so_number"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible" />

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_toEndOf="@id/txt_date"
    android:layout_marginEnd="@dimen/margin_16">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/rl_edit">
        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"

            app:srcCompat="@drawable/ic_clear_black_24dp" />
        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_toStartOf="@+id/img_delete"
            app:srcCompat="@drawable/ic_mode_edit_24dp" />
    </RelativeLayout>
    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:checked="true"
        android:visibility="gone"
        android:layout_gravity="end"
        android:id="@+id/checkbox"/>

</FrameLayout>
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_4"
            android:gravity="center_vertical"
            android:text="12-05-2018"
            android:textAllCaps="false"
            android:textColor="@color/colorLogin"
            android:textSize="@dimen/_10sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/view"
            android:background="@color/colorGrayLight"
            android:layout_below="@+id/txt_date"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"/>



        <LinearLayout
            android:layout_below="@+id/lbl_delear_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/ll_details"
            android:visibility="visible"
            android:layout_marginTop="@dimen/margin_8"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4"
                android:text="Edit Indent "
                android:background="@drawable/cust_txt"
                android:gravity="center"
                android:textColor="@color/colorGreen"
                android:id="@+id/txt_edit"
                android:layout_marginEnd="@dimen/margin_4"
                android:layout_weight="1"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/frm">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_4"
                    android:text="Cancel Indent"
                    android:background="@drawable/cust_txt"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:layout_marginStart="@dimen/margin_4"
                    android:id="@+id/txt_cancel"
                  />
                <ProgressBar
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:id="@+id/progress_delete"/>

            </FrameLayout>





        </LinearLayout>
        <!--<TextView-->
            <!--android:id="@+id/txt_year"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:fontFamily="@font/open_sans"-->
            <!--android:text="15m"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:textColor="#dc8e8b8b"-->
            <!--android:visibility="gone"-->
            <!--android:textSize="10sp"-->
            <!--android:layout_alignBaseline="@+id/txt_date"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:textStyle="normal" />-->



    </RelativeLayout>

</android.support.v7.widget.CardView>