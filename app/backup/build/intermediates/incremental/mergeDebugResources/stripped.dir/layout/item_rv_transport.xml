<?xml version="1.0" encoding="utf-8"?>

                                                        
    
                 
                                 
                                                                                                   
           
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:tag="layout/item_rv_transport_0"    
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        app:cardPreventCornerOverlap="true"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_8">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/lbl_dealer_code"
                android:textColor="@color/colorGray"
                android:text="Transporter Name:"
                android:fontFamily="@font/open_sans"
                android:textStyle="normal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/colorBlack"
                android:tag="binding_1"                               
                android:maxLines="1"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_toEndOf="@+id/lbl_dealer_code"
                android:id="@+id/txt_dealerCode"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/lbl_dealer_name"
                android:textColor="@color/colorGray"
                android:text="Transporter Code :"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_below="@+id/txt_dealerCode"
                android:fontFamily="@font/open_sans"
                android:textStyle="normal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/colorBlack"
                android:tag="binding_2"                               
                android:id="@+id/txt_dealerName"
                android:layout_alignBaseline="@+id/lbl_dealer_name"
                android:layout_toEndOf="@+id/lbl_dealer_name"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_below="@+id/txt_dealerCode"
                android:maxLines="1"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold" />



        </RelativeLayout>





    </android.support.v7.widget.CardView>
         