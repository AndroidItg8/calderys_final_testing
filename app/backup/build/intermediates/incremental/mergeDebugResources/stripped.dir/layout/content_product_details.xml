<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".caldNet.newIndent.Deetails.ProductDetailsActivity"
    tools:showIn="@layout/activity_product_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_delivery_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:drawablePadding="@dimen/margin_8"
        android:text="Dispatched Date"
        android:textColor="@color/colorBlack" />


    <TableLayout
        android:id="@+id/simpleTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_delivery_date"
        android:layout_margin="@dimen/margin_8"
        android:background="@drawable/cust_txt"
        android:stretchColumns="1">

        <TableRow

            android:id="@+id/tbl_row_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:id="@+id/lbl_material_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"

                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"

                android:padding="@dimen/margin_8"
                android:text="Material Code"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_indent_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"

                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"

                android:text="1000000070-1308-0001"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"

                android:textStyle="normal"
                android:visibility="visible" />
        </TableRow>
        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"

                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"

                android:padding="@dimen/margin_8"
                android:text="Indent  Code"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_material_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"

                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"

                android:text="1000000070-1308-0001"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"

                android:textStyle="normal"
                android:visibility="visible" />
        </TableRow>


        <TableRow

            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_product_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Product Remark "

                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_product_remark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="2230*10*100 "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/lbl_quanity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"

                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"

                android:padding="@dimen/margin_8"

                android:text="Quantity "
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"

                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="2000"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />
        </TableRow>

        <TableRow

            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_plant_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"

                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Plant Code"

                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_plant_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="CM 11"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/lbl_open_discount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Open Discount %"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_open_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />


        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_hidden_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text=" Hidden Discount"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_hidden"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/txt_so_number"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:padding="@dimen/margin_8"
                android:text="0.0%"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_units"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"

                android:padding="@dimen/margin_8"
                android:text="Units"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_units"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="MT"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_transport_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Transport Code"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"

                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_transport_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="000009998888 "

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lbl_transport_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Transport Name"
                android:textColor="@color/colorGray"

                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />


            <TextView
                android:id="@+id/txt_transport_namr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Text Van"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"

                android:textStyle="normal"
                android:visibility="visible" />

        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lbl_add_tax_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Tax Info"

                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />


            <TextView
                android:id="@+id/txt_add_tax_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="left|center_vertical"
                android:padding="@dimen/margin_8"

                android:text="Tax info"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simpleTableLayout"
        android:layout_marginTop="@dimen/margin_8"
        android:id="@+id/tbl_lbl"
      >


        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_8">

            <TextView
                android:id="@+id/lbl_inspections"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Inspecttion"

                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lbl_tc_required"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_8"
                android:text="TC Required"

                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lbl_lc_required"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_8"
                android:text="LC Required"


                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"

            android:layout_marginBottom="8dp"
            android:id="@+id/tbl_inspsction"

            android:layout_marginEnd="@dimen/margin_8">

            <TextView
                android:id="@+id/txt_inspections"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="@dimen/margin_8"
                android:text="Yes"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_tc_required"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="center"


                android:padding="@dimen/margin_8"
                android:text="Yes"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_lc_required"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="@dimen/margin_8"
                android:text="Yes"


                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />



        </TableRow>

    </TableLayout>




    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbl_lbl"
        android:layout_margin="@dimen/margin_8">

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <TextView
                android:id="@+id/lbl_total_price_after_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Total Price"

                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lbl_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Price Per Unit"


                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

        </TableRow>
        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >

            <TextView
                android:id="@+id/txt_total_price_after_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_8"
                android:text="Total Price"
                android:drawablePadding="@dimen/margin_4"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cust_txt"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_8"
                android:text="1234567890"
                android:drawablePadding="@dimen/margin_4"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:visibility="visible" />

        </TableRow>


    </TableLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>