<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".caldNet.newIndent.intent.fragment.ApprovedStatusAddFragment">

    <RelativeLayout
        android:id="@+id/rl_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"

        android:visibility="visible">



        <TextView
            android:id="@+id/lbl_so_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/colorPrimarys"
            android:drawableRight="@drawable/ic_arrow_create_next"
            android:padding="4dp"
            android:text="So Type "
            android:textColor="@color/colorWhite" />

        <Spinner
            android:id="@+id/edt_so_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/lbl_so_type"
            android:background="@drawable/bg_cus_spinner"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/lbl_modified_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_so_type_spinner"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/colorPrimarys"

            android:padding="4dp"
            android:text="Material Code"
            android:textColor="@color/colorWhite" />


        <EditText
            android:id="@+id/edt_modified_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/lbl_modified_date"
            android:background="@drawable/bg_react_header"

            android:inputType="date"
            android:padding="10dp" />
    <TextView
            android:id="@+id/lbl_so_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_modified_date"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/colorPrimarys"

            android:padding="4dp"
            android:text="So Number "
            android:textColor="@color/colorWhite" />


        <EditText
            android:id="@+id/ed_so_number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/lbl_so_number"
            android:background="@drawable/bg_react_header"
            android:inputType="number"
            android:padding="10dp" />
   <TextView
            android:id="@+id/lbl_approved_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_so_number"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/colorPrimarys"
            android:drawableRight="@drawable/ic_arrow_create_next"
            android:padding="4dp"
            android:text="Approved BY "
            android:textColor="@color/colorWhite" />


        <EditText
            android:id="@+id/edt_approved_by"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/lbl_approved_by"
            android:background="@drawable/bg_react_header"
            android:inputType="text"
            android:padding="10dp" />
 <TextView
            android:id="@+id/lbl_so_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_approved_by"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/colorPrimarys"

            android:padding="4dp"
            android:text="So Date "
            android:textColor="@color/colorWhite" />


        <EditText
            android:id="@+id/edt_so_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/lbl_so_date"
            android:background="@drawable/bg_react_header"
            android:inputType="text"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_modified_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_so_date"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/colorPrimarys"
            android:padding="4dp"
            android:text="Modified By "
            android:textColor="@color/colorWhite" />


        <EditText
            android:id="@+id/edt_modified_by"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/lbl_modified_by"
            android:background="@drawable/bg_react_header"
            android:inputType="text"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:padding="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login"
            android:text="Submit"
            android:layout_margin="@dimen/margin_16"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/edt_modified_by"/>


</RelativeLayout>
</android.support.v4.widget.NestedScrollView>
